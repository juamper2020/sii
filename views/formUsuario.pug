div.row
    div.col-sm-8.offset-sm-2
        form(action=`${usuarioEditar ? '/actualizarProducto/'+usuarioEditar.idUsuario : '/insertarUsuario'}` method="POST")
            div.form-row
                div.form-group.col-md-6
                    label Nombre completo
                    input.form-control(type="text" name="txtNombre" value=`${usuarioEditar ? usuarioEditar.usuNombre : ''}`)
                div.form-group.col-md-6
                    label Correo electrónico
                    input.form-control(type="email" name="txtCorreoElectronico" value=`${usuarioEditar ? usuarioEditar.usuCorreoElectronico : ''}`)
                div.form-group.col-md-6
                    label Contraseña
                    input.form-control(type="password" name="txtContrasenia")
                div.form-group.col-md-6
                    label Confirmar contraseña
                    input.form-control(type="password" name="txtContrasenia2")
                div.form-group.col-md-12 
                block boton
